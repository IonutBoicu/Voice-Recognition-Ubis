<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <EditText
            android:id="@+id/recTextBox"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:hint="@string/enter_text_to_write"
            android:inputType="number"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <Button
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_mic_black_24dp"
            android:id="@+id/recButton"
            android:background="@android:color/transparent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:enabled="true"
            android:onClick="speak" />
        <ImageView
            android:layout_above="@id/recButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_mute_black_24dp"
            android:id="@+id/low_volume"/>
        <ImageView
            android:layout_above="@id/recButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_down_black_24dp"
            android:visibility="gone"
            android:id="@+id/avg_volume"/>
        <ImageView
            android:layout_above="@id/recButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_volume_up_black_24dp"
            android:visibility="gone"
            android:id="@+id/high_volume" />



    </RelativeLayout>
</LinearLayout>